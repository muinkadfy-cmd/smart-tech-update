{
  "name": "smart-tech-rolandia",
  "version": "3.0.13",
  "description": "Smart Tech Rolândia 2.0 - Sistema de Gestão",
  "author": "Smart Tech Rolândia",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "start": "node server/index.js",
    "electron:dev": "electron .",
    "electron:build": "electron-builder",
    "electron:build:win": "electron-builder --win",
    "build": "vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-updater": "^6.6.2",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.smarttech.rolandia",
    "productName": "Smart Tech Rolândia 2.0",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "src/**/*",
      "public/**/*",
      "package.json",
      "!server/**/*",
      "!node_modules/**/*"
    ],
    "extraFiles": [
      {
        "from": "updates",
        "to": "updates",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "electron/preload.cjs",
      "electron/license-manager.js",
      "electron/devtools-detector.js"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon/icon.ico",
      "publisherName": "Smart Tech Rolândia"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Smart Tech Rolândia 2.0",
      "include": "build/installer-script.nsh",
      "installerIcon": "build/icon/icon.ico",
      "uninstallerIcon": "build/icon/icon.ico",
      "installerHeaderIcon": "build/icon/icon.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true
    },
    "publish": {
      "provider": "generic",
      "url": "https://smart-tech-server.up.railway.app/update"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
